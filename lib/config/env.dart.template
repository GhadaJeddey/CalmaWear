// 1. Copy this file and rename it to "env.dart"
// 2. Replace the empty defaultValue strings with your actual API keys
// 3. NEVER commit env.dart to Git (it's in .gitignore)

class Env {
  // Gemini AI API Key
  // Get from: https://makersuite.google.com/app/apikey
  static const String geminiApiKey = String.fromEnvironment(
    'GEMINI_API_KEY',
    defaultValue: '', // Add your Gemini API key here
  );

  static bool get isGeminiConfigured => geminiApiKey.isNotEmpty;

  // Cloudinary Configuration
  // Get from: https://console.cloudinary.com/
  static const String cloudinaryCloudName = String.fromEnvironment(
    'CLOUDINARY_CLOUD_NAME',
    defaultValue: '', // Add your cloud name here
  );

  static const String cloudinaryApiKey = String.fromEnvironment(
    'CLOUDINARY_API_KEY',
    defaultValue: '', // Add your API key here
  );

  static const String cloudinaryApiSecret = String.fromEnvironment(
    'CLOUDINARY_API_SECRET',
    defaultValue: '', // Add your API secret here
  );

  static bool get isCloudinaryConfigured =>
      cloudinaryCloudName.isNotEmpty &&
      cloudinaryApiKey.isNotEmpty &&
      cloudinaryApiSecret.isNotEmpty;

  // Twilio SMS Configuration
  // Get credentials from: https://console.twilio.com/
  static const String twilioAccountSid = String.fromEnvironment(
    'TWILIO_ACCOUNT_SID',
    defaultValue: '', // Add your Account SID here (starts with AC)
  );

  static const String twilioAuthToken = String.fromEnvironment(
    'TWILIO_AUTH_TOKEN',
    defaultValue: '', // Add your Auth Token here
  );

  static const String twilioPhoneNumber = String.fromEnvironment(
    'TWILIO_PHONE_NUMBER',
    defaultValue: '', // Add your Twilio phone number here (e.g., +21658414453)
  );

  static bool get isTwilioConfigured =>
      twilioAccountSid.isNotEmpty &&
      twilioAuthToken.isNotEmpty &&
      twilioPhoneNumber.isNotEmpty;
}
